@model Mottracker.Application.Dtos.LayoutPatio.LayoutPatioRequestDto

@{
    ViewData["Title"] = "Criar Layout do Pátio";
}

<h1>Criar</h1>

<h4>Layout do Pátio</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label">Descrição do Layout</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataCriacao" class="control-label">Data de Criação</label>
                <input asp-for="DataCriacao" class="form-control" type="date" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Largura" class="control-label">Largura</label>
                <input asp-for="Largura" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Largura" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Comprimento" class="control-label">Comprimento</label>
                <input asp-for="Comprimento" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Comprimento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Altura" class="control-label">Altura</label>
                <input asp-for="Altura" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PatioLayoutPatioId" class="control-label">ID do Pátio</label>
                <input asp-for="PatioLayoutPatioId" class="form-control" type="number" />
                <span asp-validation-for="PatioLayoutPatioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

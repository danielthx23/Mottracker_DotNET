@model Mottracker.Application.Dtos.LayoutPatio.LayoutPatioResponseDto

@{
    ViewData["Title"] = "Excluir Layout do Pátio";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este layout do pátio?</h3>
<div>
    <h4>Layout do Pátio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Layout
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdLayoutPatio)
        </dd>
        <dt class="col-sm-2">
            Descrição do Layout
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Data de Criação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            Pátio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatioLayoutPatio.NomePatio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLayoutPatio" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

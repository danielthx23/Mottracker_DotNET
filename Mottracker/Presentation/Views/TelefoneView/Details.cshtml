@model Mottracker.Application.Dtos.Telefone.TelefoneResponseDto

@{
    ViewData["Title"] = "Detalhes do Telefone";
}

<h1>Detalhes</h1>

<div>
    <h4>Telefone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Número do Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class="col-sm-2">
            Tipo do Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NomeUsuario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdTelefone" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@model Mottracker.Application.Dtos.Telefone.TelefoneResponseDto

@{
    ViewData["Title"] = "Excluir Telefone";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este telefone?</h3>
<div>
    <h4>Telefone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Número do Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class="col-sm-2">
            Tipo do Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NomeUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTelefone" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

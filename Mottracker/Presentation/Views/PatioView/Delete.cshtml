@model Mottracker.Application.Dtos.Patio.PatioResponseDto

@{
    ViewData["Title"] = "Excluir Pátio";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este pátio?</h3>
<div>
    <h4>Pátio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Pátio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePatio)
        </dd>
        <dt class="col-sm-2">
            Total de Motos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MotosTotaisPatio)
        </dd>
        <dt class="col-sm-2">
            Motos Disponíveis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MotosDisponiveisPatio)
        </dd>
        <dt class="col-sm-2">
            Data do Pátio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPatio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPatio" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

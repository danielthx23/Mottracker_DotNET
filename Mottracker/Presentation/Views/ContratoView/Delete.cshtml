@model Mottracker.Application.Dtos.Contrato.ContratoResponseDto

@{
    ViewData["Title"] = "Excluir Contrato";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este contrato?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            Data de Saída
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
        <dt class="col-sm-2">
            Contrato Ativo
        </dt>
        <dd class="col-sm-10">
            @(Model.AtivoContrato ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            Renovação Automática
        </dt>
        <dd class="col-sm-10">
            @(Model.RenovacaoAutomatica ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NomeUsuario)
        </dd>
        <dt class="col-sm-2">
            Moto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moto.PlacaMoto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdContrato" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

@model Mottracker.Application.Dtos.Contrato.ContratoResponseDto

@{
    ViewData["Title"] = "Detalhes do Contrato";
}

<h1>Detalhes</h1>

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeEntradaContrato)
        </dd>
        <dt class="col-sm-2">
            Data de Saída
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeExpiracaoContrato)
        </dd>
        <dt class="col-sm-2">
            Contrato Ativo
        </dt>
        <dd class="col-sm-10">
            @(Model.AtivoContrato == 1 ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            Renovação Automática
        </dt>
        <dd class="col-sm-10">
            @(Model.RenovacaoAutomaticaContrato == 1 ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioContrato.NomeUsuario)
        </dd>
        <dt class="col-sm-2">
            Moto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MotoContrato.PlacaMoto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdContrato" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

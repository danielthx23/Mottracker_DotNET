@model Mottracker.Application.Dtos.QrCodePonto.QrCodePontoResponseDto

@{
    ViewData["Title"] = "Excluir QR Code Ponto";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este QR Code Ponto?</h3>
<div>
    <h4>QR Code Ponto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Identificador do QR Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentificadorQrCode)
        </dd>
        <dt class="col-sm-2">
            Posição X
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosX)
        </dd>
        <dt class="col-sm-2">
            Posição Y
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosY)
        </dd>
        <dt class="col-sm-2">
            Layout do Pátio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LayoutPatio.IdLayoutPatio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdQrCodePonto" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

@model Mottracker.Application.Dtos.UsuarioPermissao.UsuarioPermissaoResponseDto

@{
    ViewData["Title"] = "Excluir Usuário Permissão";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esta permissão do usuário?</h3>
<div>
    <h4>Usuário Permissão</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NomeUsuario)
        </dd>
        <dt class="col-sm-2">
            Permissão
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permissao.NomePermissao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuarioPermissaoUsuarioId" />
        <input type="hidden" asp-for="UsuarioPermissaoPermissaoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

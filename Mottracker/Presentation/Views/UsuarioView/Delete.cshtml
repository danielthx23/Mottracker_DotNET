@model Mottracker.Application.Dtos.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este usuário?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
        <dt class="col-sm-2">
            Email do Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

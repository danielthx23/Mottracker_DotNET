@model Mottracker.Application.Dtos.Usuario.UsuarioRequestDto

@{
    ViewData["Title"] = "Criar Usuário";
}

<h1>Criar</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NomeUsuario" class="control-label">Nome do Usuário</label>
                <input asp-for="NomeUsuario" class="form-control" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmailUsuario" class="control-label">Email do Usuário</label>
                <input asp-for="EmailUsuario" class="form-control" type="email" />
                <span asp-validation-for="EmailUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SenhaUsuario" class="control-label">Senha do Usuário</label>
                <input asp-for="SenhaUsuario" class="form-control" type="password" />
                <span asp-validation-for="SenhaUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

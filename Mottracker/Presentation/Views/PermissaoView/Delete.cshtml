@model Mottracker.Application.Dtos.Permissao.PermissaoResponseDto

@{
    ViewData["Title"] = "Excluir Permissão";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esta permissão?</h3>
<div>
    <h4>Permissão</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome da Permissão
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePermissao)
        </dd>
        <dt class="col-sm-2">
            Descrição da Permissão
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoPermissao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPermissao" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

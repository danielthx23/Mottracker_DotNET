@model Mottracker.Application.Dtos.Permissao.PermissaoRequestDto

@{
    ViewData["Title"] = "Criar Permissão";
}

<h1>Criar</h1>

<h4>Permissão</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NomePermissao" class="control-label">Nome da Permissão</label>
                <input asp-for="NomePermissao" class="form-control" />
                <span asp-validation-for="NomePermissao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DescricaoPermissao" class="control-label">Descrição da Permissão</label>
                <textarea asp-for="DescricaoPermissao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescricaoPermissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

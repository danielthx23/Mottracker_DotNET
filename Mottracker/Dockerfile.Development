FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

RUN dotnet tool install --global dotnet-ef --version 8.0.0
ENV PATH="$PATH:/root/.dotnet/tools"

COPY ["Mottracker.csproj", "./"]
RUN dotnet restore "Mottracker.csproj"

COPY . .

RUN dotnet build "Mottracker.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Mottracker.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS final
ARG BUILD_CONFIGURATION=Release

RUN useradd -m appuser

USER appuser

ENV PATH="/home/appuser/.dotnet/tools:$PATH"
RUN dotnet tool install --global dotnet-ef --version 8.0.0

WORKDIR /app

COPY --from=publish /app/publish ./
COPY --from=build /src ./src
COPY entrypoint.sh .

USER root
RUN chmod +x entrypoint.sh && chown -R appuser:appuser /app/src /app/entrypoint.sh
USER appuser

ENV ASPNETCORE_URLS=http://+:5024
ENV ASPNETCORE_ENVIRONMENT=Development

EXPOSE 5024

ENTRYPOINT ["./entrypoint.sh"]